%content
  #about-us.padded-content
    %h1.text-justify.text-center
      About Us

  #weather.padded-content
    %h2 Weather
    %hr
    .row
      #weather0.col-md-6.col-sm-12
      #weather1.col-md-6.col-sm-12
    .row.text-right
      %a{href: weather_path}
        See more on weather

  #market.padded-content{style: "padding-top: 20px"}
    %h2 Market
    %hr
    .row
      .col-md-6.col-sm-12
        %img.card-img-bottom{:alt => "a local fruit vendor", :src => "#{image_url('market')}", height: 300}
      .col-md-6.col-sm-12
        - @market.each do |m|
          %h3= m.title
          %p= m.peek
    .row
      %a{href: market_index_path}
        More on market conditions

  #news.padded-content{style: "padding-top: 20px"}
    %h2 News
    %hr
    .row
      .col-md-6.col-sm-12
        - @news.each do |n|
          %h3= n.title
          %p= n.peek
      .col-md-6.col-sm-12
        %img.card-img-bottom{:alt => "Illustrative image of a man reading newspaper", :src => "#{image_url('news')}", height: 300}
    .row
      %a{href: news_index_path}
        More news

  #guides.padded-content{style: "padding-top: 20px"}
    %h2 Guides
    %hr
    .row
      .col-md-6.col-sm-12
        %img.card-img-bottom{:alt => "book shelf with a lot of books", :src => "#{image_url('guides')}", height: 300}
      .col-md-6.col-sm-12
        - @guides.each do |g|
          %h3= g.title
          %p= g.peek
    .row
      %a{href: guides_path}
        Learn more

  #finance.padded-content{style: "padding-top: 20px"}
    %h2 Finance
    %hr
    .row
      .col-md-6.col-sm-12
        - @finance.each do |f|
          %h3= f.title
          %p= f.peek
      .col-md-6.col-sm-12
        %img.card-img-bottom{:alt => "50 Rupee note", :src => "#{image_url('finance')}", height: 300}
    .row
      %a{href: finance_index_path}
        More finance options

  #blog.padded-content{style: "padding-top: 20px"}
    %h2 Blogs
    %hr
    .row
      .col-md-6.col-sm-12
        %img.card-img-bottom{:alt => "a work  desk", :src => "#{image_url('blog')}", height: 300}
      .col-md-6.col-sm-12
        - @blogs.each do |b|
          %h3= b.title
          %p= b.peek
    .row
      %a{href: '#'}
        Read more

